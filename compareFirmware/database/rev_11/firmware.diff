+        return;
+    }
+
+    /* calc y position */
+    uint8_t y_line = y / 8;
+
+    /* check pixel array */
+    pixel_save[x][y_line] = pixel_save[x][y_line] & ~(1 << (y % 8));
+
+    /* remove stackedpixel */
+    pcd8544_clear_stackedpixel(dev, x, y_line, pixel_save[x][y_line]);
